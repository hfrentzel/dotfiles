{
    "kubectl": {
        "type": "exe",
        "version": "1.26.0",
        "installers": ["Sequence"],
        "steps": [
            "curl -L 'https://dl.k8s.io/release/v{version}/bin/linux/amd64/kubectl' -o ~/.local/bin/kubectl",
            "chmod +x ~/.local/bin/kubectl"
        ]
    },
    "helm": {
        "type": "exe",
        "version": "3.12.3",
        "installers": ["Github"],
        "repo": "helm/helm"
    },
    "k9s": {
        "type": "exe",
        "version": "0.27.4",
        "installers": ["Github", "Go"],
        "repo": "derailed/k9s",
        "url": "github.com/derailed/k9s"
    },
    "k9s-hotkeys": {
        "type": "symlink",
        "source": "DOT/clis/kubernetes/hotkey.yml",
        "target": "~/.config/k9s/hotkey.yml"
    },
    "k9s-skin": {
        "type": "symlink",
        "source": "DOT/clis/kubernetes/skin.yml",
        "target": "~/.config/k9s/skin.yml"
    }
}
